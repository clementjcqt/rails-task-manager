<div class="container col-6 my-4 form-control justify-content-center">
  <%=form_with model: @task, html:{class:'form-control'} do |f| %>
    <%= f.label :title, html:{class:'form-control'} %>
    <%= f.text_field :title %>
    <%= f.label :details, html:{class:'form-control'} %>
    <%= f.text_field :details %>
    <%= f.submit class:"btn btn-primary"%>
  <% end %>
</div>
